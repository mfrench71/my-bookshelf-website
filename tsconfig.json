{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": true,
    "allowJs": true,
    "checkJs": false,
    "baseUrl": ".",
    "paths": {
      "/js/*": ["src/js/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/js/types"]
  },
  "include": ["src/js/**/*.ts", "src/js/**/*.d.ts"],
  "exclude": ["src/js/vendor/**/*", "node_modules", "_site"]
}
