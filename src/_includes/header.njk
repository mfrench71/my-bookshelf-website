<!-- Offline Banner -->
<div id="offline-banner" class="hidden bg-amber-500 text-white text-center text-sm py-1 px-4">
  <span class="inline-flex items-center gap-1">
    <i data-lucide="wifi-off" class="w-4 h-4"></i>
    You're offline - viewing cached data
  </span>
</div>

<!-- Common Site Header -->
<header class="bg-white border-b border-gray-200 sticky top-0 z-40 h-14">
  <div class="max-w-6xl mx-auto px-4 h-full flex items-center justify-between">
    <a href="/" class="flex items-center gap-2 hover:opacity-80">
      <div class="w-8 h-8 bg-primary rounded-lg flex items-center justify-center">
        <i data-lucide="book-open" class="w-4 h-4 text-white"></i>
      </div>
      <span class="text-xl font-bold text-gray-900">MyBookShelf</span>
    </a>
    <div class="flex items-center gap-1">
      <a href="/books/" class="p-2 sm:px-4 sm:py-2 bg-primary hover:bg-primary-dark text-white rounded-lg sm:rounded-lg transition-colors inline-flex items-center gap-2" aria-label="View My Library">
        <i data-lucide="library" class="w-5 h-5 sm:w-4 sm:h-4" aria-hidden="true"></i>
        <span class="hidden sm:inline text-sm">My Library</span>
      </a>
      <button id="search-btn" class="p-2.5 hover:bg-gray-100 rounded-lg min-w-[44px] min-h-[44px] flex items-center justify-center" aria-label="Search books">
        <i data-lucide="search" class="w-5 h-5 text-gray-600" aria-hidden="true"></i>
      </button>
      <button id="menu-btn" class="p-2.5 hover:bg-gray-100 rounded-lg min-w-[44px] min-h-[44px] flex items-center justify-center" aria-label="Open menu">
        <i data-lucide="menu" class="w-5 h-5 text-gray-600" aria-hidden="true"></i>
      </button>
    </div>
  </div>
</header>

<!-- Menu: Bottom sheet on mobile, slide-out on desktop -->
<div id="menu-overlay" class="hidden fixed top-0 left-0 right-0 bottom-0 bg-black/50 z-50">
  <!-- Mobile: Bottom sheet -->
  <div id="menu-panel" class="md:hidden bottom-sheet-content bg-white w-full p-6">
    <div class="bottom-sheet-handle"></div>
    <div class="flex items-center gap-3 mb-4">
      <div id="menu-avatar-mobile" class="w-12 h-12 bg-primary rounded-full flex items-center justify-center text-white text-lg font-bold overflow-hidden"></div>
      <div>
        <p id="user-email-mobile" class="text-sm font-medium text-gray-900"></p>
        <p class="text-xs text-gray-500">MyBookShelf</p>
      </div>
    </div>
    <nav class="space-y-1">
      <a href="/settings/" class="flex items-center gap-3 px-4 py-3 hover:bg-gray-100 rounded-lg min-h-[44px]">
        <i data-lucide="settings" class="w-5 h-5 text-gray-600" aria-hidden="true"></i>
        <span>Settings</span>
      </a>
      <button id="logout-btn-mobile" class="w-full flex items-center gap-3 px-4 py-3 hover:bg-gray-100 rounded-lg text-left text-red-600 min-h-[44px]">
        <i data-lucide="log-out" class="w-5 h-5" aria-hidden="true"></i>
        <span>Sign Out</span>
      </button>
    </nav>
    <button id="close-menu-mobile" class="w-full mt-4 py-2 text-gray-500 hover:text-gray-700 text-sm min-h-[44px]">
      Close
    </button>
  </div>
  <!-- Desktop: Slide-out panel -->
  <div id="menu-panel-desktop" class="hidden md:block absolute right-0 top-0 bottom-0 w-80 bg-white shadow-xl translate-x-full transition-transform duration-200">
    <div class="p-4 border-b border-gray-200">
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-3">
          <div id="menu-avatar" class="w-10 h-10 bg-primary rounded-full flex items-center justify-center text-white font-bold overflow-hidden"></div>
          <div>
            <p id="user-email" class="text-sm font-medium text-gray-900"></p>
            <p class="text-xs text-gray-500">MyBookShelf</p>
          </div>
        </div>
        <button id="close-menu" class="p-2.5 hover:bg-gray-100 rounded-lg min-w-[44px] min-h-[44px] flex items-center justify-center" aria-label="Close menu">
          <i data-lucide="x" class="w-5 h-5" aria-hidden="true"></i>
        </button>
      </div>
    </div>
    <nav class="p-2">
      <a href="/settings/" class="flex items-center gap-3 px-4 py-3 hover:bg-gray-100 rounded-lg min-h-[44px]">
        <i data-lucide="settings" class="w-5 h-5 text-gray-600" aria-hidden="true"></i>
        <span>Settings</span>
      </a>
      <hr class="my-2">
      <button id="logout-btn" class="w-full flex items-center gap-3 px-4 py-3 hover:bg-gray-100 rounded-lg text-left text-red-600 min-h-[44px]">
        <i data-lucide="log-out" class="w-5 h-5" aria-hidden="true"></i>
        <span>Sign Out</span>
      </button>
    </nav>
  </div>
</div>

<!-- Search Overlay -->
<div id="search-overlay" class="hidden fixed top-0 left-0 right-0 bottom-0 bg-white z-50 flex flex-col overflow-hidden">
  <div class="flex items-center gap-2 p-4 border-b border-gray-200 flex-shrink-0">
    <button id="close-search" class="p-2.5 hover:bg-gray-100 rounded-lg min-w-[44px] min-h-[44px] flex items-center justify-center" aria-label="Close search">
      <i data-lucide="arrow-left" class="w-5 h-5" aria-hidden="true"></i>
    </button>
    <div class="relative flex-1">
      <input type="text" id="search-input" placeholder="Search books..." aria-label="Search books"
        class="w-full px-3 py-2 pr-10 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary outline-none">
      <button type="button" id="clear-search-input" class="hidden absolute right-1 top-1/2 -translate-y-1/2 p-2.5 hover:bg-gray-100 rounded-full text-gray-400 hover:text-gray-600 min-w-[40px] min-h-[40px] flex items-center justify-center" aria-label="Clear search">
        <i data-lucide="x" class="w-4 h-4" aria-hidden="true"></i>
      </button>
    </div>
  </div>
  <div id="search-results" class="flex-1 overflow-y-auto overscroll-contain p-4 space-y-3 max-w-6xl mx-auto w-full"></div>
</div>
