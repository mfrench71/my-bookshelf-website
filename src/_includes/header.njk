<!-- Offline Banner -->
<div id="offline-banner" class="hidden bg-amber-500 text-white text-center text-sm py-1 px-4">
  <span class="inline-flex items-center gap-1">
    <i data-lucide="wifi-off" class="w-4 h-4"></i>
    You're offline - viewing cached data
  </span>
</div>

<!-- Common Site Header -->
<header class="bg-white border-b border-gray-200 sticky top-0 z-40">
  <div class="max-w-6xl mx-auto px-4 py-3 flex items-center justify-between">
    <a href="/books/" class="flex items-center gap-2 hover:opacity-80">
      <div class="w-8 h-8 bg-primary rounded-lg flex items-center justify-center">
        <i data-lucide="book-open" class="w-4 h-4 text-white"></i>
      </div>
      <span class="text-xl font-bold text-gray-900">MyBookShelf</span>
    </a>
    <div class="flex items-center gap-1">
      <button id="search-btn" class="p-2 hover:bg-gray-100 rounded-lg" title="Search">
        <i data-lucide="search" class="w-5 h-5 text-gray-600"></i>
      </button>
      <button id="menu-btn" class="p-2 hover:bg-gray-100 rounded-lg" title="Menu">
        <i data-lucide="menu" class="w-5 h-5 text-gray-600"></i>
      </button>
    </div>
  </div>
</header>

<!-- Menu Overlay -->
<div id="menu-overlay" class="hidden fixed inset-0 bg-black/50 z-50">
  <div id="menu-panel" class="absolute right-0 top-0 bottom-0 w-80 bg-white shadow-xl transform translate-x-full transition-transform">
    <div class="p-4 border-b border-gray-200">
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-3">
          <div id="menu-avatar" class="w-10 h-10 bg-primary rounded-full flex items-center justify-center text-white font-bold overflow-hidden">
            <!-- Populated by JS: photo, Gravatar, or initial -->
          </div>
          <div>
            <p id="user-email" class="text-sm font-medium text-gray-900"></p>
            <p class="text-xs text-gray-500">MyBookShelf</p>
          </div>
        </div>
        <button id="close-menu" class="p-1 hover:bg-gray-100 rounded">
          <i data-lucide="x" class="w-5 h-5"></i>
        </button>
      </div>
    </div>
    <nav class="p-2">
      <a href="/settings/" class="flex items-center gap-3 px-4 py-3 hover:bg-gray-100 rounded-lg">
        <i data-lucide="settings" class="w-5 h-5 text-gray-600"></i>
        <span>Settings</span>
      </a>
      <hr class="my-2">
      <button id="logout-btn" class="w-full flex items-center gap-3 px-4 py-3 hover:bg-gray-100 rounded-lg text-left text-red-600">
        <i data-lucide="log-out" class="w-5 h-5"></i>
        <span>Sign Out</span>
      </button>
    </nav>
  </div>
</div>

<!-- Search Overlay -->
<div id="search-overlay" class="hidden fixed inset-0 bg-white z-50 flex flex-col overflow-hidden">
  <div class="flex items-center gap-2 p-4 border-b border-gray-200 flex-shrink-0">
    <button id="close-search" class="p-2 hover:bg-gray-100 rounded-lg">
      <i data-lucide="arrow-left" class="w-5 h-5"></i>
    </button>
    <div class="relative flex-1">
      <input type="text" id="search-input" placeholder="Search books..."
        class="w-full px-3 py-2 pr-10 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary outline-none">
      <button type="button" id="clear-search-input" class="hidden absolute right-2 top-1/2 -translate-y-1/2 p-1 hover:bg-gray-100 rounded-full text-gray-400 hover:text-gray-600">
        <i data-lucide="x" class="w-4 h-4"></i>
      </button>
    </div>
  </div>
  <div id="search-results" class="flex-1 overflow-y-auto overscroll-contain p-4 space-y-3 max-w-6xl mx-auto w-full"></div>
</div>
