<!-- Common Site Header -->
<header class="bg-white border-b border-gray-200 sticky top-0 z-40">
  <div class="max-w-6xl mx-auto px-4 py-3 flex items-center justify-between">
    <a href="/books/" class="flex items-center gap-2 hover:opacity-80">
      <div class="w-8 h-8 bg-primary rounded-lg flex items-center justify-center">
        <i data-lucide="book-open" class="w-4 h-4 text-white"></i>
      </div>
      <span class="text-xl font-bold text-gray-900">MyBookShelf</span>
    </a>
    <div class="flex items-center gap-1">
      <button id="search-btn" class="p-2 hover:bg-gray-100 rounded-lg" title="Search">
        <i data-lucide="search" class="w-5 h-5 text-gray-600"></i>
      </button>
      <button id="menu-btn" class="p-2 hover:bg-gray-100 rounded-lg" title="Menu">
        <i data-lucide="menu" class="w-5 h-5 text-gray-600"></i>
      </button>
    </div>
  </div>
</header>

<!-- Menu Overlay -->
<div id="menu-overlay" class="hidden fixed inset-0 bg-black/50 z-50">
  <div id="menu-panel" class="absolute right-0 top-0 bottom-0 w-72 bg-white shadow-xl transform translate-x-full transition-transform">
    <div class="p-4 border-b border-gray-200">
      <div class="flex items-center justify-between">
        <span class="font-medium">Menu</span>
        <button id="close-menu" class="p-1 hover:bg-gray-100 rounded">
          <i data-lucide="x" class="w-5 h-5"></i>
        </button>
      </div>
      <p id="user-email" class="text-sm text-gray-500 mt-1"></p>
    </div>
    <nav class="p-2">
      <a href="/books/" class="flex items-center gap-3 px-4 py-3 hover:bg-gray-100 rounded-lg">
        <i data-lucide="library" class="w-5 h-5 text-gray-600"></i>
        <span>My Books</span>
      </a>
      <a href="/add/" class="flex items-center gap-3 px-4 py-3 hover:bg-gray-100 rounded-lg">
        <i data-lucide="plus-circle" class="w-5 h-5 text-gray-600"></i>
        <span>Add Book</span>
      </a>
      <button id="export-btn" class="w-full flex items-center gap-3 px-4 py-3 hover:bg-gray-100 rounded-lg text-left">
        <i data-lucide="download" class="w-5 h-5 text-gray-600"></i>
        <span>Export Books</span>
      </button>
      <hr class="my-2">
      <button id="logout-btn" class="w-full flex items-center gap-3 px-4 py-3 hover:bg-gray-100 rounded-lg text-left text-red-600">
        <i data-lucide="log-out" class="w-5 h-5"></i>
        <span>Sign Out</span>
      </button>
    </nav>
  </div>
</div>

<!-- Search Overlay -->
<div id="search-overlay" class="hidden fixed inset-0 bg-white z-50 flex flex-col overflow-hidden">
  <div class="flex items-center gap-2 p-4 border-b border-gray-200 flex-shrink-0">
    <button id="close-search" class="p-2 hover:bg-gray-100 rounded-lg">
      <i data-lucide="arrow-left" class="w-5 h-5"></i>
    </button>
    <input type="search" id="search-input" placeholder="Search books..."
      class="flex-1 px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary outline-none">
  </div>
  <div id="search-results" class="flex-1 overflow-y-auto overscroll-contain p-4 space-y-3 max-w-6xl mx-auto w-full"></div>
</div>
