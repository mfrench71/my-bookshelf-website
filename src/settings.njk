---
layout: base.njk
title: Settings
scripts: '<script type="module" src="/js/settings.js"></script>'
---
<!-- Sub-navigation -->
<div class="bg-white border-b border-gray-200 sticky top-14 z-30">
  <div class="max-w-6xl mx-auto px-4 py-2 flex items-center justify-between">
    <button id="back-btn" class="p-2 -ml-2 hover:bg-gray-100 rounded-lg flex items-center gap-2 text-gray-600">
      <i data-lucide="arrow-left" class="w-4 h-4"></i>
      <span class="text-sm">Back</span>
    </button>
  </div>
</div>

<main id="main-content" class="max-w-6xl mx-auto px-4 py-6 page-content">
  <h1 class="text-2xl font-bold text-gray-900 mb-6">Settings</h1>

  <div class="flex flex-col md:flex-row gap-6">
    <!-- Left Navigation (Desktop only) -->
    <nav class="hidden md:block w-fit max-w-64 flex-shrink-0">
      <div class="bg-gray-100 rounded-xl p-3 flex flex-col gap-1">
        <button data-section="profile" class="settings-nav-btn active flex items-center gap-2 px-4 py-2 rounded-lg whitespace-nowrap text-left">
          <i data-lucide="user" class="w-4 h-4"></i>
          <span>Profile</span>
        </button>
        <button data-section="genres" class="settings-nav-btn flex items-center gap-2 px-4 py-2 rounded-lg whitespace-nowrap text-left">
          <i data-lucide="tags" class="w-4 h-4"></i>
          <span>Manage Genres</span>
        </button>
        <button data-section="export" class="settings-nav-btn flex items-center gap-2 px-4 py-2 rounded-lg whitespace-nowrap text-left">
          <i data-lucide="archive" class="w-4 h-4"></i>
          <span>Backup & Restore</span>
        </button>
        <button data-section="cleanup" class="settings-nav-btn flex items-center gap-2 px-4 py-2 rounded-lg whitespace-nowrap text-left">
          <i data-lucide="wrench" class="w-4 h-4"></i>
          <span>Data Cleanup</span>
        </button>
        <button data-section="content" class="settings-nav-btn flex items-center gap-2 px-4 py-2 rounded-lg whitespace-nowrap text-left">
          <i data-lucide="layout-dashboard" class="w-4 h-4"></i>
          <span>Home Content</span>
        </button>
      </div>
    </nav>

    <!-- Content Area -->
    <div class="flex-1 min-w-0 md:bg-white md:rounded-xl md:p-6">
      <!-- Profile Section -->
      <section id="profile-section" class="settings-section bg-white md:bg-transparent border-t border-x border-gray-200 md:border-0 rounded-t-xl md:rounded-none overflow-hidden">
        <!-- Mobile Accordion Header -->
        <button data-accordion="profile" class="accordion-header md:hidden w-full flex items-center justify-between p-4 border-b border-gray-200">
          <div class="flex items-center gap-3">
            <i data-lucide="user" class="w-5 h-5 text-primary"></i>
            <span class="font-medium text-gray-900">Profile</span>
          </div>
          <i data-lucide="chevron-down" class="accordion-icon w-5 h-5 text-gray-400 transition-transform"></i>
        </button>
        <!-- Section Content -->
        <div class="accordion-content p-4 md:p-0">
          <h2 class="hidden md:block text-lg font-semibold text-gray-900 mb-4">Profile</h2>

          <!-- User Info -->
          <div class="bg-gray-50 rounded-xl p-6 mb-6">
          <div class="flex items-center gap-4">
            <button id="edit-avatar-btn" class="relative group cursor-pointer">
              <div id="profile-avatar" class="w-16 h-16 bg-primary rounded-full flex items-center justify-center text-white text-2xl font-bold overflow-hidden">
                <!-- Initial, Gravatar, or uploaded photo -->
              </div>
              <!-- Hover overlay for desktop -->
              <div class="absolute inset-0 bg-black/50 rounded-full flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity">
                <i data-lucide="camera" class="w-5 h-5 text-white"></i>
              </div>
              <!-- Edit badge for mobile (hidden on desktop where hover works) -->
              <div class="absolute -bottom-0.5 -right-0.5 w-6 h-6 bg-primary rounded-full flex items-center justify-center shadow-md md:hidden">
                <i data-lucide="pencil" class="w-3 h-3 text-white"></i>
              </div>
            </button>
            <div>
              <p id="profile-email" class="text-gray-900 font-medium"></p>
              <p class="text-gray-500 text-sm">Member since <span id="profile-created"></span></p>
            </div>
          </div>
        </div>

        <div class="space-y-4">
          <!-- Email Verification Status -->
          <div id="email-verification-section" class="hidden bg-gray-50 rounded-xl p-6">
            <div class="flex items-center justify-between">
              <div class="flex items-center gap-3">
                <i id="verification-icon" data-lucide="mail-check" class="w-5 h-5 text-green-600"></i>
                <div>
                  <h3 class="font-medium text-gray-900">Email Verification</h3>
                  <p id="verification-status" class="text-gray-500 text-sm mt-0.5">Verified</p>
                </div>
              </div>
              <button id="resend-verification-settings-btn" class="hidden flex items-center gap-2 px-4 py-2 border border-gray-300 hover:bg-gray-100 text-gray-700 text-sm rounded-lg transition-colors">
                <i data-lucide="send" class="w-4 h-4"></i>
                <span>Resend</span>
              </button>
            </div>
          </div>

          <!-- Change Password -->
          <div class="bg-gray-50 rounded-xl p-6">
            <div class="flex items-center justify-between">
              <div>
                <h3 class="font-medium text-gray-900">Change Password</h3>
                <p class="text-gray-500 text-sm mt-1">Update your account password</p>
              </div>
              <button id="change-password-btn" class="flex items-center gap-2 px-4 py-2 bg-primary hover:bg-primary-dark text-white text-sm rounded-lg transition-colors">
                <i data-lucide="key" class="w-4 h-4"></i>
                <span>Change</span>
              </button>
            </div>
          </div>

          <!-- Privacy Settings -->
          <div class="bg-gray-50 rounded-xl p-6">
            <div class="flex items-center justify-between">
              <div>
                <h3 class="font-medium text-gray-900">Privacy Settings</h3>
                <p class="text-gray-500 text-sm mt-1">Manage your data and privacy preferences</p>
              </div>
              <button id="privacy-settings-btn" class="flex items-center gap-2 px-4 py-2 border border-gray-300 hover:bg-gray-100 text-gray-700 text-sm rounded-lg transition-colors">
                <i data-lucide="shield" class="w-4 h-4"></i>
                <span>Manage</span>
              </button>
            </div>
          </div>

          <!-- Delete Account -->
          <div class="bg-red-50 rounded-xl p-6">
            <div class="flex items-center justify-between">
              <div>
                <h3 class="font-medium text-red-900">Delete Account</h3>
                <p class="text-red-700 text-sm mt-1">Permanently delete your account and all data</p>
              </div>
              <button id="delete-account-btn" class="flex items-center gap-2 px-4 py-2 bg-red-600 hover:bg-red-700 text-white text-sm rounded-lg transition-colors">
                <i data-lucide="trash-2" class="w-4 h-4"></i>
                <span>Delete</span>
              </button>
            </div>
          </div>
          </div>
        </div>
      </section>

      <!-- Genres Section -->
      <section id="genres-section" class="settings-section hidden bg-white md:bg-transparent border-x border-gray-200 md:border-0 overflow-hidden">
        <!-- Mobile Accordion Header -->
        <button data-accordion="genres" class="accordion-header md:hidden w-full flex items-center justify-between p-4 border-y border-gray-200">
          <div class="flex items-center gap-3">
            <i data-lucide="tags" class="w-5 h-5 text-primary"></i>
            <span class="font-medium text-gray-900">Manage Genres</span>
          </div>
          <i data-lucide="chevron-down" class="accordion-icon w-5 h-5 text-gray-400 transition-transform"></i>
        </button>
        <!-- Section Content -->
        <div class="accordion-content p-4 md:p-0">
          <div class="flex items-center justify-between mb-4">
            <h2 class="hidden md:block text-lg font-semibold text-gray-900">Manage Genres</h2>
          <button id="add-genre-btn" class="flex items-center gap-2 px-3 py-1.5 bg-primary hover:bg-primary-dark text-white text-sm rounded-lg transition-colors">
            <i data-lucide="plus" class="w-4 h-4"></i>
            <span>Add</span>
          </button>
        </div>

        <!-- Loading State (Skeleton) -->
        <div id="genres-loading" class="space-y-2">
          {% for i in range(0, 4) %}
          <div class="flex items-center gap-3 p-3 bg-white rounded-lg border border-gray-100">
            <div class="skeleton w-4 h-4 rounded-full"></div>
            <div class="skeleton skeleton-text flex-1 w-24"></div>
            <div class="skeleton skeleton-text w-8"></div>
          </div>
          {% endfor %}
        </div>

        <!-- Empty State -->
        <div id="genres-empty" class="hidden py-8 text-center bg-gray-50 rounded-xl">
          <i data-lucide="tags" class="w-12 h-12 text-gray-300 mx-auto"></i>
          <h3 class="text-base font-medium text-gray-600 mt-3">No genres yet</h3>
          <p class="text-gray-400 text-sm mt-1">Create your first genre to organise books</p>
        </div>

          <!-- Genre List -->
          <div id="genre-list" class="space-y-2"></div>
        </div>
      </section>

      <!-- Backup & Restore Section -->
      <section id="export-section" class="settings-section hidden bg-white md:bg-transparent border-x border-gray-200 md:border-0 overflow-hidden">
        <!-- Mobile Accordion Header -->
        <button data-accordion="export" class="accordion-header md:hidden w-full flex items-center justify-between p-4 border-y border-gray-200">
          <div class="flex items-center gap-3">
            <i data-lucide="archive" class="w-5 h-5 text-primary"></i>
            <span class="font-medium text-gray-900">Backup & Restore</span>
          </div>
          <i data-lucide="chevron-down" class="accordion-icon w-5 h-5 text-gray-400 transition-transform"></i>
        </button>
        <!-- Section Content -->
        <div class="accordion-content p-4 md:p-0">
          <h2 class="hidden md:block text-lg font-semibold text-gray-900 mb-4">Backup & Restore</h2>

          <!-- Export -->
          <div class="bg-gray-50 rounded-xl p-6 mb-4">
            <h3 class="font-medium text-gray-900 mb-2">Export Backup</h3>
            <p class="text-gray-600 text-sm mb-4">Download all your books and genres as a JSON file.</p>
            <button id="export-btn" class="flex items-center gap-2 px-4 py-2 bg-primary hover:bg-primary-dark text-white rounded-lg transition-colors">
              <i data-lucide="download" class="w-4 h-4"></i>
              <span>Download Backup</span>
            </button>
          </div>

          <!-- Import -->
          <div class="bg-gray-50 rounded-xl p-6">
            <h3 class="font-medium text-gray-900 mb-2">Import Backup</h3>
            <p class="text-gray-600 text-sm mb-4">Restore books and genres from a backup file. Duplicates will be skipped.</p>
            <input type="file" id="import-file" accept=".json" class="hidden">
            <button id="import-btn" class="flex items-center gap-2 px-4 py-2 border border-gray-300 hover:bg-gray-100 text-gray-700 rounded-lg transition-colors">
              <i data-lucide="upload" class="w-4 h-4"></i>
              <span>Select Backup File</span>
            </button>
            <div id="import-progress" class="hidden mt-4">
              <div class="flex items-center gap-2 text-sm text-gray-600">
                <span class="inline-block animate-spin w-4 h-4 border-2 border-primary border-t-transparent rounded-full"></span>
                <span id="import-status">Importing...</span>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Data Cleanup Section -->
      <section id="cleanup-section" class="settings-section hidden bg-white md:bg-transparent border-x border-gray-200 md:border-0 overflow-hidden">
        <!-- Mobile Accordion Header -->
        <button data-accordion="cleanup" class="accordion-header md:hidden w-full flex items-center justify-between p-4 border-y border-gray-200">
          <div class="flex items-center gap-3">
            <i data-lucide="wrench" class="w-5 h-5 text-primary"></i>
            <span class="font-medium text-gray-900">Data Cleanup</span>
          </div>
          <i data-lucide="chevron-down" class="accordion-icon w-5 h-5 text-gray-400 transition-transform"></i>
        </button>
        <!-- Section Content -->
        <div class="accordion-content p-4 md:p-0">
          <h2 class="hidden md:block text-lg font-semibold text-gray-900 mb-4">Data Cleanup</h2>
          <div class="space-y-6">
          <!-- Genre Migration -->
          <div class="bg-gray-50 rounded-xl p-6">
            <h3 class="font-medium text-gray-900 mb-2">Fix Genre References</h3>
            <p class="text-gray-600 text-sm mb-4">Some books may have genre names stored directly instead of references to your genre collection. This tool will find and fix those entries, creating new genres as needed.</p>
            <div id="cleanup-progress" class="hidden mb-4">
              <div class="flex items-center gap-2 text-sm text-gray-600 mb-2">
                <div class="animate-spin w-4 h-4 border-2 border-primary border-t-transparent rounded-full"></div>
                <span id="cleanup-status">Processing...</span>
              </div>
              <div class="w-full bg-gray-200 rounded-full h-2">
                <div id="cleanup-progress-bar" class="bg-primary h-2 rounded-full transition-all" style="width: 0%"></div>
              </div>
            </div>
            <div id="cleanup-results" class="hidden mb-4 p-4 bg-white rounded-lg border border-gray-200">
              <p id="cleanup-results-text" class="text-sm text-gray-700"></p>
            </div>
            <button id="cleanup-genres-btn" class="flex items-center gap-2 px-4 py-2 bg-amber-500 hover:bg-amber-600 text-white rounded-lg transition-colors">
              <i data-lucide="sparkles" class="w-4 h-4"></i>
              <span>Run Cleanup</span>
            </button>
          </div>

          <!-- Recalculate Genre Counts -->
          <div class="bg-gray-50 rounded-xl p-6">
            <h3 class="font-medium text-gray-900 mb-2">Recalculate Genre Counts</h3>
            <p class="text-gray-600 text-sm mb-4">If genre book counts appear incorrect, this will scan all books and recalculate the count for each genre.</p>
            <div id="recount-results" class="hidden mb-4 p-4 bg-white rounded-lg border border-gray-200">
              <p id="recount-results-text" class="text-sm text-gray-700"></p>
            </div>
            <button id="recount-genres-btn" class="flex items-center gap-2 px-4 py-2 bg-blue-500 hover:bg-blue-600 text-white rounded-lg transition-colors">
              <i data-lucide="calculator" class="w-4 h-4"></i>
              <span>Recalculate Counts</span>
            </button>
          </div>

          <!-- Fetch Book Covers -->
          <div class="bg-gray-50 rounded-xl p-6">
            <h3 class="font-medium text-gray-900 mb-2">Fetch Book Covers</h3>
            <p class="text-gray-600 text-sm mb-4">Scan your library for alternative book covers from Google Books and Open Library. Books with ISBNs will be checked for available cover images.</p>
            <div id="cover-stats" class="mb-4 text-sm text-gray-600">
              <p>Books with ISBN: <span id="cover-isbn-count" class="font-medium">-</span></p>
              <p>Books with multiple covers: <span id="cover-multi-count" class="font-medium">-</span></p>
            </div>
            <div id="cover-progress" class="hidden mb-4">
              <div class="flex items-center gap-2 text-sm text-gray-600 mb-2">
                <div class="animate-spin w-4 h-4 border-2 border-primary border-t-transparent rounded-full"></div>
                <span id="cover-status">Fetching covers...</span>
              </div>
              <div class="w-full bg-gray-200 rounded-full h-2">
                <div id="cover-progress-bar" class="bg-primary h-2 rounded-full transition-all" style="width: 0%"></div>
              </div>
            </div>
            <div id="cover-results" class="hidden mb-4 p-4 bg-white rounded-lg border border-gray-200">
              <p id="cover-results-text" class="text-sm text-gray-700"></p>
            </div>
            <button id="fetch-covers-btn" class="flex items-center gap-2 px-4 py-2 bg-indigo-500 hover:bg-indigo-600 text-white rounded-lg transition-colors">
              <i data-lucide="image" class="w-4 h-4"></i>
              <span>Fetch Covers</span>
            </button>
          </div>
          </div>
        </div>
      </section>

      <!-- Content Settings Section -->
      <section id="content-section" class="settings-section hidden bg-white md:bg-transparent border-x border-b border-gray-200 md:border-0 rounded-b-xl md:rounded-none overflow-hidden">
        <!-- Mobile Accordion Header -->
        <button data-accordion="content" class="accordion-header md:hidden w-full flex items-center justify-between p-4 border-y border-gray-200">
          <div class="flex items-center gap-3">
            <i data-lucide="layout-dashboard" class="w-5 h-5 text-primary"></i>
            <span class="font-medium text-gray-900">Home Content</span>
          </div>
          <i data-lucide="chevron-down" class="accordion-icon w-5 h-5 text-gray-400 transition-transform"></i>
        </button>
        <!-- Section Content -->
        <div class="accordion-content p-4 md:p-0">
          <h2 class="hidden md:block text-lg font-semibold text-gray-900 mb-4">Home Page Sections</h2>
          <p class="text-gray-600 text-sm mb-4">Choose which sections appear on your home page and how many items to show in each.</p>

          <div class="space-y-4" id="home-sections-config">
            <!-- Currently Reading -->
            <div class="bg-gray-50 rounded-xl p-4">
              <div class="flex items-center justify-between mb-2">
                <div class="flex items-center gap-2">
                  <i data-lucide="book-open" class="w-5 h-5 text-blue-600"></i>
                  <span class="font-medium text-gray-900">Currently Reading</span>
                </div>
                <label class="relative inline-flex items-center cursor-pointer">
                  <input type="checkbox" id="toggle-currentlyReading" class="sr-only peer" checked>
                  <div class="w-11 h-6 bg-gray-200 peer-focus:ring-2 peer-focus:ring-primary rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary"></div>
                </label>
              </div>
              <p class="text-gray-500 text-sm mb-3">Books you're currently reading</p>
              <div class="flex items-center gap-2">
                <label class="text-sm text-gray-600">Items to show:</label>
                <select id="count-currentlyReading" class="px-2 py-1 border border-gray-300 rounded text-sm">
                  <option value="3">3</option>
                  <option value="6" selected>6</option>
                  <option value="9">9</option>
                  <option value="12">12</option>
                </select>
              </div>
            </div>

            <!-- Recently Added -->
            <div class="bg-gray-50 rounded-xl p-4">
              <div class="flex items-center justify-between mb-2">
                <div class="flex items-center gap-2">
                  <i data-lucide="sparkles" class="w-5 h-5 text-purple-600"></i>
                  <span class="font-medium text-gray-900">Recently Added</span>
                </div>
                <label class="relative inline-flex items-center cursor-pointer">
                  <input type="checkbox" id="toggle-recentlyAdded" class="sr-only peer" checked>
                  <div class="w-11 h-6 bg-gray-200 peer-focus:ring-2 peer-focus:ring-primary rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary"></div>
                </label>
              </div>
              <p class="text-gray-500 text-sm mb-3">Latest books in your library</p>
              <div class="flex items-center gap-2">
                <label class="text-sm text-gray-600">Items to show:</label>
                <select id="count-recentlyAdded" class="px-2 py-1 border border-gray-300 rounded text-sm">
                  <option value="3">3</option>
                  <option value="6" selected>6</option>
                  <option value="9">9</option>
                  <option value="12">12</option>
                </select>
              </div>
            </div>

            <!-- Top Rated -->
            <div class="bg-gray-50 rounded-xl p-4">
              <div class="flex items-center justify-between mb-2">
                <div class="flex items-center gap-2">
                  <i data-lucide="star" class="w-5 h-5 text-amber-500"></i>
                  <span class="font-medium text-gray-900">Top Rated</span>
                </div>
                <label class="relative inline-flex items-center cursor-pointer">
                  <input type="checkbox" id="toggle-topRated" class="sr-only peer" checked>
                  <div class="w-11 h-6 bg-gray-200 peer-focus:ring-2 peer-focus:ring-primary rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary"></div>
                </label>
              </div>
              <p class="text-gray-500 text-sm mb-3">Your highest-rated books</p>
              <div class="flex items-center gap-2">
                <label class="text-sm text-gray-600">Items to show:</label>
                <select id="count-topRated" class="px-2 py-1 border border-gray-300 rounded text-sm">
                  <option value="3">3</option>
                  <option value="6" selected>6</option>
                  <option value="9">9</option>
                  <option value="12">12</option>
                </select>
              </div>
            </div>

            <!-- Recently Finished -->
            <div class="bg-gray-50 rounded-xl p-4">
              <div class="flex items-center justify-between mb-2">
                <div class="flex items-center gap-2">
                  <i data-lucide="check-circle" class="w-5 h-5 text-green-600"></i>
                  <span class="font-medium text-gray-900">Recently Finished</span>
                </div>
                <label class="relative inline-flex items-center cursor-pointer">
                  <input type="checkbox" id="toggle-recentlyFinished" class="sr-only peer" checked>
                  <div class="w-11 h-6 bg-gray-200 peer-focus:ring-2 peer-focus:ring-primary rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary"></div>
                </label>
              </div>
              <p class="text-gray-500 text-sm mb-3">Books you've recently completed</p>
              <div class="flex items-center gap-2">
                <label class="text-sm text-gray-600">Items to show:</label>
                <select id="count-recentlyFinished" class="px-2 py-1 border border-gray-300 rounded text-sm">
                  <option value="3">3</option>
                  <option value="6" selected>6</option>
                  <option value="9">9</option>
                  <option value="12">12</option>
                </select>
              </div>
            </div>

          </div>
        </div>
      </section>
    </div>
  </div>
</main>

<!-- Create/Edit Genre Modal -->
<div id="genre-modal" class="hidden fixed inset-0 bg-black/50 z-50 flex items-center justify-center p-4">
  <div class="bg-white rounded-xl w-full max-w-md p-6">
    <h3 id="modal-title" class="text-lg font-semibold mb-4">Add Genre</h3>
    <form id="genre-form" class="space-y-4">
      <div>
        <label class="block font-semibold text-gray-700 mb-1">Name</label>
        <input type="text" id="genre-name" required placeholder="e.g., Science Fiction"
          class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary outline-none">
      </div>
      <div>
        <label class="block font-semibold text-gray-700 mb-2">Colour</label>
        <div id="color-picker" class="flex flex-wrap gap-2"></div>
      </div>
      <div class="flex gap-3 pt-2">
        <button type="button" id="cancel-genre" class="flex-1 py-2 px-4 border border-gray-300 rounded-lg hover:bg-gray-50">
          Cancel
        </button>
