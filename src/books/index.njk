---
layout: base.njk
title: My Books
description: Browse and filter your book collection
scripts: '<script type="module" src="/js/books/index.js"></script>'
---
<!-- Mobile: Sort & Filter Controls -->
<div class="bg-white border-b border-gray-200 sticky top-14 z-30 md:hidden">
  <div class="max-w-6xl mx-auto px-4 py-3">
    <div class="flex items-center gap-2">
      <!-- Filter trigger button -->
      <button id="filter-trigger" class="relative p-2.5 hover:bg-gray-100 rounded-lg text-gray-600 min-w-[44px] min-h-[44px] flex items-center justify-center" aria-label="Open filters">
        <i data-lucide="sliders-horizontal" class="w-5 h-5" aria-hidden="true"></i>
        <span id="filter-count-badge" class="hidden absolute -top-0.5 -right-0.5 w-5 h-5 bg-primary text-white text-xs rounded-full flex items-center justify-center font-medium">0</span>
      </button>
      <!-- Sort dropdown (always visible on mobile) -->
      <div class="flex-1">
        <label for="sort-select-mobile" class="sr-only">Sort books by</label>
        <select id="sort-select-mobile"
          class="w-full bg-white border border-gray-200 rounded-lg px-3 py-2 text-sm focus:ring-2 focus:ring-primary focus:border-primary outline-none cursor-pointer">
          <option value="createdAt-desc">Date Added (Newest)</option>
          <option value="createdAt-asc">Date Added (Oldest)</option>
          <option value="title-asc">Title (A-Z)</option>
          <option value="title-desc">Title (Z-A)</option>
          <option value="author-asc">Author (A-Z)</option>
          <option value="author-desc">Author (Z-A)</option>
          <option value="rating-desc">Rating (High-Low)</option>
          <option value="rating-asc">Rating (Low-High)</option>
          <option value="seriesPosition-asc" class="series-sort-option hidden">Series Order</option>
        </select>
      </div>
    </div>
    <!-- Active Filter Chips (mobile) -->
    <div id="active-filters-mobile" class="hidden mt-2">
      <div class="flex flex-wrap gap-2"></div>
    </div>
  </div>
</div>

<!-- Mobile: Filter Bottom Sheet -->
<div id="filter-sheet" class="hidden fixed inset-0 bg-black/50 z-50 md:hidden" role="dialog" aria-modal="true" aria-labelledby="filter-sheet-title">
  <div id="filter-sheet-content" class="absolute bottom-0 left-0 right-0 bg-white rounded-t-2xl max-h-[85vh] flex flex-col translate-y-full transition-transform duration-300">
    <!-- Handle -->
    <div class="bottom-sheet-handle cursor-grab"></div>
    <!-- Header -->
    <div class="px-4 pb-3 border-b border-gray-200 flex-shrink-0">
      <h2 id="filter-sheet-title" class="text-lg font-semibold">Filters</h2>
    </div>
    <!-- Filter content (scrollable) -->
    <div id="filter-panel-mobile" class="flex-1 overflow-y-auto p-4"></div>
    <!-- Apply button -->
    <div class="p-4 border-t border-gray-200 flex-shrink-0">
      <button id="apply-filters-mobile" class="w-full bg-primary hover:bg-primary-dark text-white font-medium py-3 px-4 rounded-lg transition-colors">
        Apply Filters
      </button>
    </div>
  </div>
</div>

<!-- Pull to Refresh Indicator -->
<div id="pull-indicator" class="hidden overflow-hidden transition-all duration-200">
  <div class="flex items-center justify-center py-3 text-gray-500">
    <i id="pull-icon" data-lucide="arrow-down" class="w-5 h-5 mr-2 transition-transform"></i>
    <span id="pull-text">Pull to refresh</span>
  </div>
</div>

<!-- Main Content -->
<div class="max-w-6xl mx-auto px-4 pt-6 pb-24">
  <!-- Page title - sr-only, actual visual headings below use aria-hidden -->
  <h1 class="sr-only">My Books</h1>
  <!-- Mobile header -->
  <div class="flex items-center justify-between mb-4 md:hidden">
    <span class="text-xl font-bold text-gray-900" aria-hidden="true">My Books</span>
    <p id="book-count-mobile" class="hidden text-sm text-gray-500" aria-live="polite"></p>
  </div>
  <div class="flex gap-4 md:gap-6">
    <!-- Desktop: Filter Sidebar -->
    <aside class="hidden md:block w-72 flex-shrink-0">
        <!-- Skeleton loader -->
        <div id="filter-sidebar-skeleton" class="skeleton-fade bg-white rounded-xl border border-gray-200 p-4 space-y-4">
          <div>
            <div class="skeleton skeleton-text w-16 h-4 mb-2"></div>
            <div class="skeleton h-10 w-full rounded-lg"></div>
          </div>
          <div>
            <div class="skeleton skeleton-text w-14 h-4 mb-2"></div>
            <div class="skeleton h-10 w-full rounded-lg"></div>
          </div>
          <div>
            <div class="skeleton skeleton-text w-12 h-4 mb-2"></div>
            <div class="skeleton h-10 w-full rounded-lg"></div>
          </div>
          <div>
            <div class="skeleton skeleton-text w-14 h-4 mb-2"></div>
            <div class="skeleton h-10 w-full rounded-lg"></div>
          </div>
          <div>
            <div class="skeleton skeleton-text w-12 h-4 mb-2"></div>
            <div class="skeleton h-10 w-full rounded-lg"></div>
          </div>
          <div class="skeleton h-10 w-full rounded-lg"></div>
        </div>
        <!-- Actual filter panel (hidden until loaded) -->
        <div id="filter-sidebar" class="hidden bg-white rounded-xl border border-gray-200 p-4">
          <!-- FilterPanel renders here -->
        </div>
    </aside>

    <!-- Book Grid -->
    <div class="flex-1 min-w-0">
      <!-- Desktop Header with count -->
      <div class="hidden md:flex items-center justify-between mb-4">
        <span class="text-xl font-bold text-gray-900" aria-hidden="true">My Books</span>
        <p id="book-count-desktop" class="hidden text-sm text-gray-500" aria-live="polite"></p>
      </div>
      <!-- Active Filter Chips (desktop) - above book list, hidden on mobile -->
      <div id="active-filters-desktop" class="hidden mb-4 max-md:!hidden">
        <div class="flex flex-wrap items-center gap-2"></div>
      </div>
      <!-- Loading State (Skeleton Cards) -->
      <div id="loading-state" class="skeleton-fade space-y-3">
        {% for i in range(0, 5) %}
        <div class="skeleton-card">
          <div class="skeleton skeleton-cover"></div>
          <div class="flex-1 min-w-0 py-1">
            <div class="skeleton skeleton-text w-3/4"></div>
            <div class="skeleton skeleton-text w-1/2"></div>
            <div class="skeleton skeleton-text w-1/4 mt-2"></div>
          </div>
        </div>
        {% endfor %}
      </div>

      <!-- Empty State (no books in library) -->
      <div id="empty-state" class="hidden py-12 text-center">
        <i data-lucide="book-open" class="w-12 h-12 text-gray-300 mx-auto" aria-hidden="true"></i>
        <p class="text-gray-500 mt-3">No books yet</p>
        <p class="text-gray-400 text-sm mt-1">Tap the + button to add your first book</p>
      </div>

      <!-- No Results State (filters active, no matches) -->
      <div id="no-results-state" class="hidden py-12 text-center">
        <i data-lucide="search-x" class="w-12 h-12 text-gray-300 mx-auto" aria-hidden="true"></i>
        <p id="no-results-title" class="text-gray-500 mt-3">No books match your filters</p>
        <p class="text-gray-400 text-sm mt-1">Try adjusting your filters or <button id="clear-filters-link" class="text-primary hover:underline">clear all filters</button></p>
      </div>

      <!-- Book List -->
      <div id="book-list" class="space-y-3"></div>
    </div>
  </div>
</div>

<!-- FAB - Add Book -->
<a href="/books/add/"
  class="fixed bottom-6 right-6 w-14 h-14 bg-primary hover:bg-primary-dark text-white rounded-full shadow-lg flex items-center justify-center transition-colors z-30 fab-press"
  aria-label="Add new book">
  <i data-lucide="plus" class="w-6 h-6" aria-hidden="true"></i>
</a>

<!-- Toast -->
<div id="toast" class="hidden fixed bottom-20 left-4 right-4 sm:left-auto sm:right-4 sm:w-80 bg-gray-800 text-white px-4 py-3 rounded-lg shadow-lg z-50"></div>
