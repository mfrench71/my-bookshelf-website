{
  "name": "my-bookshelf-website",
  "version": "1.0.0",
  "description": "",
  "main": "sw.js",
  "scripts": {
    "build:js": "node scripts/build-js.js",
    "build:css": "npx tailwindcss -i ./src/css/tailwind.css -o ./_site/css/styles.css --minify",
    "build:11ty": "npx eleventy",
    "build": "npm run build:11ty && npm run build:js && npm run build:css",
    "watch:js": "chokidar \"src/js/**/*.{js,ts}\" -c \"npm run build:js\" --initial",
    "watch:css": "npx tailwindcss -i ./src/css/tailwind.css -o ./_site/css/styles.css --watch",
    "watch:11ty": "npx eleventy --serve",
    "dev": "concurrently -n 11ty,css,js -c blue,magenta,yellow \"npm run watch:11ty\" \"npm run watch:css\" \"npm run build:js && npm run watch:js\"",
    "start": "npm run build:js && npm run build:css && npm run watch:11ty",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:e2e": "npx playwright test",
    "test:e2e:ui": "npx playwright test --ui",
    "test:e2e:headed": "npx playwright test --headed",
    "test:e2e:visual": "npx playwright test e2e/visual.spec.js",
    "test:e2e:visual:update": "npx playwright test e2e/visual.spec.js --update-snapshots",
    "test:emulator": "FIRESTORE_EMULATOR_HOST=localhost:8080 FIREBASE_AUTH_EMULATOR_HOST=localhost:9099 vitest run tests/emulator/",
    "emulator:start": "firebase emulators:start",
    "prepare": "husky",
    "audit": "node scripts/lighthouse-audit.js",
    "lint": "eslint src/js",
    "lint:fix": "eslint src/js --fix",
    "format": "prettier --write \"src/**/*.{js,ts,njk,css,json}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts,njk,css,json}\"",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mfrench71/my-bookshelf-website.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/mfrench71/my-bookshelf-website/issues"
  },
  "homepage": "https://github.com/mfrench71/my-bookshelf-website#readme",
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@axe-core/playwright": "^4.11.0",
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/cli": "^4.1.18",
    "@testing-library/dom": "^10.4.1",
    "@vitest/coverage-v8": "^4.0.16",
    "autoprefixer": "^10.4.23",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.2.1",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "firebase-admin": "^13.6.0",
    "husky": "^9.1.7",
    "jsdom": "^27.3.0",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "@ericblade/quagga2": "^1.12.1",
    "lucide": "^0.562.0",
    "zod": "^4.2.1"
  },
  "lint-staged": {
    "src/**/*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.{njk,css,json}": [
      "prettier --write"
    ],
    "src/**/*.njk": [
      "npm test -- tests/form-html-alignment.test.js --run"
    ],
    "src/js/schemas/*.js": [
      "npm test -- tests/schemas.test.js --run"
    ]
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Safari versions",
    "last 2 Firefox versions",
    "last 2 Edge versions",
    "iOS >= 14",
    "Android >= 10"
  ]
}
